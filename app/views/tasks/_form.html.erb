<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :icon, :as => :file %>
    <%= f.collection_select :parent_id, Task.all, :id, :name, :include_blank => "No parent" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
